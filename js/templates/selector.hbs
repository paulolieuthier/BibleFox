<brick-layout>
    <header id="sub-header">Choose text</header>
    <brick-layout flex>
        <brick-deck flex selected-index="0" transition-type="slide-left">
            <brick-card id="books-list">
                <ul>
                    {{#each books}}
                    <li>
                        <a data-book="{{@key}}">{{this}}</a>
                    </li>
                    {{/each}}
                </ul>
            </brick-card>
            <brick-card id="chapters-list">
            </brick-card>
        </brick-deck>
        <brick-tabbar>
            <brick-tabbar-tab id="books-tab" target="books-list">
               <button>books</button>
            </brick-tabbar-tab>
            <brick-tabbar-tab id="chapters-tab" target="chapters-list">
               <button disabled>chapters</button>
            </brick-tabbar-tab>
        </brick-tabbar>
    </brick-layout>
</brick-layout>
